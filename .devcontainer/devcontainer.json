{
  "name": "Flutter Development",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "features": {
    "ghcr.io/devcontainers/features/flutter:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "alexisvt.flutter-snippets"
      ]
    }
  },
  "postCreateCommand": "flutter doctor",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "visibility": "public"
    }
  }
}
